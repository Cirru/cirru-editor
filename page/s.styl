
#cirru
  box-sizing border-box;
  background hsl(240,80,70)
  height 500px
  width 700px
  font-size 14px
  letter-spacing 1px
  padding 6px 6px 400px 6px
  color white
  overflow scroll
  box-shadow 0px 0px 8px gray
  line-height 20px

  code
    margin 0px 6px
    color white
    font-family 'wenquanyi micro hei mono'
    white-space nowrap
    -webkit-transition-duration 1s

    &:empty
      margin 0px -1px
      padding 0px 1px
      background white

  div
    box-shadow -1px 0px 0px hsla(120,80,80,0.4)
    margin 2px 0px 2px 10px
    padding 0px 0px 0px 8px
    white-space nowrap

  #point
    outline 0px

  .inline
    margin 0px 0px 0px 2px
    padding 0px
    display: inline-block
    box-shadow 0px 1px 0px hsla(120,80,80,0.4)

  + #menu
    position absolute
    font-family 'wenquanyi micro hei mono'
    font-size 14px
    letter-spacing 1px
    padding 0px 4px
    color white
    width 0px
    overflow-y visible

    span
      background hsl(240,90,66)
      color hsl(240, 98, 90)
      line-height 24px
      padding 2px 4px
      white-space nowrap

    #sel
      background hsla(240,96,60,0.7)

#cirru > div.inline
  display block
  box-shadow -1px 0px 0px hsla(120,80,80,0.4)
  margin 2px 0px 2px 10px
  padding 0px 0px 0px 8px

::-webkit-scrollbar
  width 2px
  height 2px
  background hsla(30,30,90,0)
::-webkit-scrollbar-thumb
  border-radius 2px
  background hsl(0,70,90)