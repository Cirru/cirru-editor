
#editor
  background: hsl(240,80%,70%)
  height: 500px
  width: 800px
  font-family 'wenquanyi micro hei mono'
  font-size 14px
  letter-spacing 1px
  padding 6px
  color white
  overflow scroll
  box-shadow 0px 0px 8px gray

  code
    margin 2px 4px
    padding 2px
    box-shadow 0px 1px 0px hsl(120,90%,40%)

  div
    box-shadow -1px 0px 0px hsl(240,90%,86%)
    margin 4px 0px 4px 10px
    padding 0px 0px 1px 8px
    white-space nowrap
    border-radius: 4px;

  #point
    outline 1px

  .inline
    display: inline-block;
    border-style: solid;
    border-width: 0px 1px;
    border-color: hsl(240,90%,90%);

::-webkit-scrollbar
  width 4px
  height 4px
  background hsl(30,30%,90%)
::-webkit-scrollbar-thumb
  border-radius 4px
  background hsl(0,20%,60%)