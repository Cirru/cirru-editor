
#editor
  background: hsl(240,80%,70%)
  height: 500px
  width: 800px
  font-family 'wenquanyi micro hei mono'
  font-size 14px
  letter-spacing 1px
  padding 6px
  color white
  overflow scroll

  div
    outline none
    display inline-block
    border-color hsl(240,90%,90%)
    border-style solid
    border-width 0px 0px 1px 0px
    margin 0px 4px
    padding 0px 1px 2px 1px

  section
    border-color hsl(240,90%,87%)
    border-style solid
    border-width 0px 0px 0px 1px
    margin 4px 0px 4px 11px
    padding-left 8px
    border-radius 6px
    white-space nowrap

::-webkit-scrollbar
  width 4px
  height 4px
  background hsl(30,30%,90%)
::-webkit-scrollbar-thumb
  -webkit-border-radius 4px
  background hsl(0,20%,70%)