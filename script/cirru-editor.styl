
.cirru-editor
  padding 100px 6px 300px
  background hsl(240,60,82)
  box-shadow 0px 0px 20px hsla(240,20,30,0.4)
  opacity 0.6
  font-family monospace
  color white
  overflow scroll
  box-sizing border-box

  code
    box-shadow 0px 1px 0px hsl(0, 100, 90)
    padding 1px 0px
    margin 0px 4px
    line-height 24px

  #caret
    padding 0px
    margin 0px
    background white

  *
    box-sizing border-box
    -moz-box-sizing  border-box

  pre
    margin 2px 4px
    padding 0px 12px
    box-shadow -1px 0px 0px hsl(0,0,90)
    border-radius 6px

    pre
      // margin-left 12px

  .inline
    display inline-block
    box-shadow 0px 0px 4px hsl(0,100,90)
    margin 4px

  &>pre, &>.inline
    margin 0px
    box-shadow none

  #input
    outline none
    border none
    padding 0px
    background hsl(240,90,90)
    color white
    margin 0px

::-webkit-scrollbar
  width 4px
  height 4px
  border-radius 2px
  background hsl(240,20,90)

::-webkit-scrollbar-track
  width 4px
  background hsl(240,20,90)
  border-radius 2px

::-webkit-scrollbar-thumb
  background hsla(0,50,60,0.5)
  border-radius 2px

::-webkit-scrollbar-corner
  background hsla(0,50,90,0.4)
  border-radius 0px 0px 4px 0px